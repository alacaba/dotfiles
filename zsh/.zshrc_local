# functions
t()
{
  tmux new-session -s $1
}

genpasswd()
{
  local l=$1
    [ "$l" == "" ] && l=20
    tr -dc A-Za-z0-9_ < /dev/urandom | head -c ${l} | xargs
}
drm ()
{
  docker stop $1 && docker rm $1
}

dm-env()
{
  eval $(dm env $2 $1)
}

docker-clean()
{
  docker rm `docker ps --no-trunc -aq`
}

docker-remove-untagged()
{
  docker rmi $(docker images | grep "^<none>" | awk "{print $3}")
}

stty -ixon

