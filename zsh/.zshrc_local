# functions
t2c () {
  echo $1 | xclip -sel clip
}

r_migrate () {
  be rake db:migrate RAILS_ENV=$1
}

r_rollback () {
  be rake db:rollback RAILS_ENV=$1
}

# vars
export EDITOR='vim'
export GOPATH="$HOME/go"
export PATH="$HOME/.rbenv/bin:$PATH"
export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"
export KERN_DIR=/usr/src/kernels/`uname -r`
export PATH="/usr/local/heroku/bin:$PATH"
export PROMPT_COMMAND='echo -ne "\033]0;${USER}@${HOSTNAME}"'
export NVM_DIR="/home/alacaba/.nvm"

[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

nvm use 5.0.0

eval "$(rbenv init -)"
export PATH="$HOME/.exenv/bin:$PATH"
test -s "$HOME/.exenv/bin/exenv" && eval "$(exenv init -)"


stty stop ''
fortune -ae | cowsay -f koala -n


