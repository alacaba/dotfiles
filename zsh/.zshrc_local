# functions
t()
{
  tmux new-session -s $1
}
t2c ()
{
  echo $1 | xclip -sel clip
}

r_migrate ()
{
  be rake db:migrate RAILS_ENV=$1
}

r_rollback ()
{
  be rake db:rollback RAILS_ENV=$1
}

genpasswd()
{
  local l=$1
    [ "$l" == "" ] && l=20
    tr -dc A-Za-z0-9_ < /dev/urandom | head -c ${l} | xargs
}

